#!/usr/bin/env ruby
require_relative '../lib/turn.rb'
puts "Welcome to Tic Tac Toe!"
board = Array.new(9," ")

display_board(board)
puts "Please enter 1-9:"
input = gets.strip

index = input_to_index(input)
if valid_move?(board, index)
move(board, index, token = "X")
else
turn(board)
display_board(board)
puts "Please enter 1-9:"
input = gets.strip
index = input_to_index(input)
if valid_move?(board, index)
move(board, index, token = "O")
else
turn(board)
display_board(board)
end

turn(board)
turn(board)
