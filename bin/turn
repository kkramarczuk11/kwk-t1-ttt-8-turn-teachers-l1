#!/usr/bin/env ruby
require_relative '../lib/turn.rb'
puts "Welcome to Tic Tac Toe!"
board = Array.new(9," ")

display_board(board)
puts "Please enter 1-9:"
input = gets.strip
index = input_to_index(input)
if valid_move?(board, index)
move(board, index, token = "X")
else
turn(board)
display_board(board)
end
loop do
  if counter = 2,4,6,8
    move(board, index, token = "X")
  elsif counter = 1,3,5,7    
end
